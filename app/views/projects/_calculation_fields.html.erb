<div class="row">
	<fieldset>
		<div class="col-md-3">
			<%= f.number_field :tonnes, class: "form-control", 
			 placeholder: 'Enter Tonnes', :required => true %>
		</div>

		<div class="col-md-3">
			<%= f.select :feedstock_id, @feedstocks.map {|s| [s.type, s.id]}, 
			{prompt: "Select a Feedstock"}, class: "form-control", :required => true %><br>
		</div>

		<div class="col-md-2">
			<%= f.hidden_field :_destroy %>
			<%= link_to "remove", '#', class: "remove_fields btn btn-warning" %>
		</div>
		
	</fieldset>
</div>