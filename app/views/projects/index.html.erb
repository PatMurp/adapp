<div class="container">
	<h2><%= current_user.email %>'s Projects List</h2>

	<div class="col-md-6 col-sm-8 col-xs-12">
		<%= link_to 'Create a New Project', new_project_path, :class => 'btn btn-primary' %> <br><br>
		<div class="well">
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>Name</th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @projects.each do |project| %>
							<tr>
								<td><%= project.name %></td>
								<td><%= link_to 'View Biogas Output',project, :class => 'btn btn-success btn-xs' %></td>
								<td><%= link_to 'Project Report', report_project_path(project), :class => 'btn btn-primary btn-xs' %></td>
	        			<td><%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-info btn-xs'  %></td>
	        			<td><%= link_to 'Destroy', project, method: :delete, :class => 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
